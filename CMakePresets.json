{
    "version": 3,
    "configurePresets": [
        {
            "name": "vcpkg",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                    "type": "FILEPATH"
                }
            },
            "binaryDir": "build"
        },
        {
            "name": "vcpkg-clang",
            "inherits": "vcpkg",
            "cacheVariables": {
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": {
                    "value": "${sourceDir}/cmake/clang.cmake",
                    "type": "FILEPATH"
                }
            },
            "binaryDir": "build"
        }
    ]
}